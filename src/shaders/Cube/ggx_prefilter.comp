#version 450

// GGX specular pre-integration (split-sum approximation, first term).
// For each output texel (face, u, v), the reflection direction R is computed,
// then the environment is importance-sampled with the GGX distribution:
//
//   L_spec(R, roughness) ≈ sum_i L(H_i) * D_GGX(H_i, roughness) * G_Smith(V, L_i, roughness)
//                            * dot(V, H_i) / (dot(N, H_i) * dot(N, V)) / N
//
// For the pre-filter we assume V = R = N (isotropic), which is the standard
// approximation used in real-time IBL (Epic split-sum).

layout(local_size_x = 8, local_size_y = 8, local_size_z = 1) in;

layout(set = 0, binding = 0) uniform sampler2DArray env_map;
layout(set = 0, binding = 1, rgba32f) uniform image2DArray out_specular;

layout(push_constant) uniform PushConstants {
    float roughness;
} pc;

const float PI = 3.14159265358979323846;
const uint  NUM_SAMPLES = 1024u;

// -- Utilities (same as in lambertian shader) --

vec3 face_uv_to_dir(int face, vec2 uv) {
    switch (face) {
        case 0: return normalize(vec3( 1.0,  uv.y, -uv.x)); // +X
        case 1: return normalize(vec3(-1.0,  uv.y,  uv.x)); // -X
        case 2: return normalize(vec3( uv.x,  1.0, -uv.y)); // +Y
        case 3: return normalize(vec3( uv.x, -1.0,  uv.y)); // -Y
        case 4: return normalize(vec3( uv.x,  uv.y,  1.0)); // +Z
        case 5: return normalize(vec3(-uv.x,  uv.y, -1.0)); // -Z
        default: return vec3(0.0);
    }
}

vec3 sample_env(vec3 dir) {
    vec3 abs_dir = abs(dir);
    float max_c = max(abs_dir.x, max(abs_dir.y, abs_dir.z));
    int face;
    vec2 uv;
    if (abs_dir.x >= max_c) {
        if (dir.x > 0.0) { face = 0; uv = vec2(-dir.z, dir.y) / dir.x; }
        else              { face = 1; uv = vec2( dir.z, dir.y) / -dir.x; }
    } else if (abs_dir.y >= max_c) {
        if (dir.y > 0.0) { face = 2; uv = vec2( dir.x, -dir.z) / dir.y; }
        else              { face = 3; uv = vec2( dir.x,  dir.z) / -dir.y; }
    } else {
        if (dir.z > 0.0) { face = 4; uv = vec2( dir.x,  dir.y) / dir.z; }
        else              { face = 5; uv = vec2(-dir.x,  dir.y) / -dir.z; }
    }
    vec2 st = uv * 0.5 + 0.5;
    return texture(env_map, vec3(st, float(face))).rgb;
}

vec2 hammersley(uint i, uint N) {
    uint bits = i;
    bits = (bits << 16u) | (bits >> 16u);
    bits = ((bits & 0x55555555u) << 1u) | ((bits & 0xAAAAAAAAu) >> 1u);
    bits = ((bits & 0x33333333u) << 2u) | ((bits & 0xCCCCCCCCu) >> 2u);
    bits = ((bits & 0x0F0F0F0Fu) << 4u) | ((bits & 0xF0F0F0F0u) >> 4u);
    bits = ((bits & 0x00FF00FFu) << 8u) | ((bits & 0xFF00FF00u) >> 8u);
    float vdc = float(bits) * 2.3283064365386963e-10;
    return vec2(float(i) / float(N), vdc);
}

// GGX importance sample: returns a half-vector H in tangent space (Z=N).
// pdf(H) = D_GGX(H) * dot(N,H) / (4 * dot(V,H))
// Ref: "Real Shading in Unreal Engine 4", Brian Karis, SIGGRAPH 2013.
vec3 importance_sample_ggx(vec2 xi, float roughness) {
    float a = roughness * roughness;
    float phi = 2.0 * PI * xi.x;
    float cos_theta = sqrt((1.0 - xi.y) / (1.0 + (a * a - 1.0) * xi.y));
    float sin_theta = sqrt(1.0 - cos_theta * cos_theta);
    return vec3(sin_theta * cos(phi), sin_theta * sin(phi), cos_theta);
}

// Smith G1 (Schlick-GGX, Epic's variant)
float G1_smith(float NdotV, float roughness) {
    float k = roughness * roughness / 2.0;
    return NdotV / (NdotV * (1.0 - k) + k);
}

// Smith G2 (height-correlated, separable approx.)
float G_smith(float NdotV, float NdotL, float roughness) {
    return G1_smith(NdotV, roughness) * G1_smith(NdotL, roughness);
}

void main() {
    ivec3 gid = ivec3(gl_GlobalInvocationID);
    ivec2 out_size = imageSize(out_specular).xy;
    int face = int(gid.z);

    if (gid.x >= out_size.x || gid.y >= out_size.y || face >= 6) return;

    vec2 uv = (vec2(gid.xy) + vec2(0.5)) / vec2(out_size) * 2.0 - 1.0;

    // Reflection direction (= view direction V = N for the prefilter approximation)
    vec3 R = face_uv_to_dir(face, uv);
    vec3 N = R;
    vec3 V = R;

    // Build TBN
    vec3 up = abs(N.z) < 0.999 ? vec3(0.0, 0.0, 1.0) : vec3(1.0, 0.0, 0.0);
    vec3 T = normalize(cross(up, N));
    vec3 B = cross(N, T);

    float roughness = pc.roughness;

    vec3 prefiltered = vec3(0.0);
    float total_weight = 0.0;

    for (uint i = 0u; i < NUM_SAMPLES; ++i) {
        vec2 xi = hammersley(i, NUM_SAMPLES);
        vec3 H_tan = importance_sample_ggx(xi, roughness);
        vec3 H = normalize(T * H_tan.x + B * H_tan.y + N * H_tan.z);
        vec3 L = normalize(2.0 * dot(V, H) * H - V);

        float NdotL = max(dot(N, L), 0.0);
        if (NdotL > 0.0) {
            float NdotV = max(dot(N, V), 0.0);
            float NdotH = max(dot(N, H), 0.0);
            float VdotH = max(dot(V, H), 0.0);

            // Weight by G * VdotH / (NdotH * NdotV) — this is the standard
            // importance-sampling correction factor for GGX specular prefilter.
            float G = G_smith(NdotV, NdotL, roughness);
            float weight = G * VdotH / (NdotH * NdotV + 1e-4);

            prefiltered += sample_env(L) * weight;
            total_weight += weight;
        }
    }

    prefiltered = (total_weight > 0.0) ? prefiltered / total_weight : vec3(0.0);

    imageStore(out_specular, gid, vec4(prefiltered, 1.0));
}
